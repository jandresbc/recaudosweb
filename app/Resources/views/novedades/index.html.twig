{% extends 'base.html.twig' %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-white">
        <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
        <li class="breadcrumb-item">Maestros</li>
        <li class="breadcrumb-item active" aria-current="page">Novedades</li>
      </ol>
    </nav>

    <header class='text-center'>
        <h2>Lista de Novedades.</h2>
        <span class="help-block"><li class="fa fa-info-circle text-info"></li> Lista de las Novedades registradas en el sistema. Realizados a los registros de los módulos permitidos para realizar esta acción.</span>
    </header>

    {% if mensajes is defined and mensajes is not null or app.request.get('mensajes') is defined and app.request.get('mensajes') is not null%}
        <div id='mensaje' class="alert alert-warning alert-dismissible mt-3 w-50 mx-auto d-inline-block" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {% if mensajes is defined %}
            {{ mensajes }}
          {% elseif app.request.get('mensajes') is defined %}
            {{ app.request.get('mensajes') }}
          {% endif %}
        </div>
    {% endif %}

    <div class="container-fluid">
      <ul class="mb-2">
        <li>
            <a class="btn btn-info btn-sm" href="{{ path('novedades_new') }}">Crear Novedad</a>
        </li>
      </ul>

      <div class="text-left row mb-2" id="filtros">
        <div class="col"><h6 class="mr-3">Filtros de búsqueda</h6></div>
        <div class="col-md-9">
          {{ form_start(form) }}
            <div class="row mt-1 d-inline-block">
              <div class="col-md-12">{{ form_widget(form.fechaNovedad) }}</div>
            </div>
            <div class="row mt-1 d-inline-block">
              <div class="col-md-12">{{ form_widget(form.modulo) }}</div>
            </div>
            <div class="row mt-1 d-inline-block">
              <div class="col-md-12">{{ form_widget(form.idUsuario) }}</div>
            </div>
            <div class="row mt-1 d-inline-block">
              <div class="col-md-12">{{ form_widget(form.tipoNovedad) }}</div>
            </div>
            <div class="row mt-1 d-inline-block ml-1">
              <div class="col-md-12">
                <button id="buscar" type="submit" class="btn btn-info btn-sm"><li class="fa fa-search"></li></button>
                <input type="hidden" id="exportType" name="exportType" value="">
                <button id="btnCSV" type="submit" class='btn btn-sm btn-success'>
                  <li class="fa fa-file-excel"> Exportar .CSV</li>
                </button>
              </div>
            </div>
          {{ form_end(form) }}
        </div>
        <div class="col text-right">
            <span class="label label-warning">
                Total Entradas: <span class="cTomato">{{ novedades.getTotalItemCount }}</span>
            </span>
        </div>
      </div>

      {% if novedades is not empty %}
        <div class="table-responsive" style="height:650px; font-size:13px;">
          <table class="table table-striped table-sm mx-auto">
              <thead>
                  <tr>
                      <th>Fecha / Hora Novedad</th>
                      <th>Módulo Afectado</th>
                      <th>Identificador Datos Afectados</th>
                      <th>Datos Afectados en la Novedad</th>
                      <th>Observaciones</th>
                      <th>Usuario de la Novedad</th>
                      {% if app.session.get('rol') == 'Superusuario' %}
                      <th>Empresa</th>
                      {% endif %}
                      <th>Acciones</th>
                  </tr>
              </thead>
              <tbody>
              {% for novedad in novedades %}
                  <tr>
                      <td>{% if novedad.fechaHoraNovedad %}{{ novedad.fechaHoraNovedad|date('d/m/Y h:i:s A') }}{% endif %}</td>
                      <td>{{ novedad.moduloAfectado }}</td>
                      <td>{{ novedad.identificadorData }}</td>
                      <td>{{ novedad.anteriorData | replace({'~':' | '}) }}</td>
                      <td>{{ novedad.observacionesNovedad }}</td>
                      <td>{{ novedad.idUsuario() }}</td>
                      {% if app.session.get('rol') == 'Superusuario' %}
                      <td>{{ novedad.idEmpresa() }}</td>
                      {% endif %}
                      <td>
                          <ul>
                              <li>
                                  <a title="Ver" href="{{ path('novedades_show', { 'idNovedad': novedad.idNovedad }) }}">
                                    <span class="fa fa-eye cTomato"></span>
                                  </a>
                              </li>
                          </ul>
                      </td>
                  </tr>
              {% endfor %}
              </tbody>
          </table>
          {# display navigation #}
          <div class="navigation mx-auto">
              {{ knp_pagination_render(novedades) }}
          </div>
        </div>
        {% else %}
          <div class="alert alert-warning w-50 mx-auto">No hay registros que listar.</div>
        {% endif %}
    </div>


{% endblock %}
{% block javascripts %}
  {{ parent() }}
  $(document).ready(function(){
    $("#btnCSV").click(function(e){
      $("#exportType").val("csv");
    });

    $("#buscar").click(function(e){
      $("#exportType").val("buscar");
    });
  });
{% endblock %}
