{% extends 'base.html.twig' %}

{% block body %}
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-white">
      <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
      <li class="breadcrumb-item">Maestros</li>
      <li class="breadcrumb-item active" aria-current="page">Facturación</li>
    </ol>
  </nav>

  <header class='text-center'>
      <h2>Facturación.</h2>
      <span class="help-block"><li class="fa fa-info-circle text-info"></li> Lista todas las facturas registradas.</span>
  </header>

  {% if mensajes is defined and mensajes is not null or app.request.get('mensajes') is defined and app.request.get('mensajes') is not null%}
      <div id='mensaje' class="alert alert-warning alert-dismissible mt-3 w-50 mx-auto d-inline-block" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {% if mensajes is defined %}
          {{ mensajes }}
        {% elseif app.request.get('mensajes') is defined %}
          {{ app.request.get('mensajes') }}
        {% endif %}
      </div>
  {% endif %}

  <div class="container-fluid">
    <div class="row m-1">
      <ul class="d-inline-block w-50">
          <li>
              <a class="btn btn-info btn-sm" href="{{ path('facturas_new') }}">Crear Factura / Abonos</a>
          </li>
          <li>
              <a class="btn btn-success btn-sm" href="{{ path('subirFacturacion') }}">Subir Facturación (.csv)</a>
          </li>
          <li>
              <a id="finalizarRecaudo" class="btn btn-danger btn-sm" href="{{ path('finalizarRecaudo') }}" >
                Finalizar o Activar Recaudo
              </a>
          </li>
      </ul>

      {% if facturas is not empty %}
        <div class="d-inline-block w-50 text-right">
            <span class="label label-warning">
                Total Entradas: <span class="cTomato">{{ facturas.getTotalItemCount }}</span>
            </span>
        </div>
      {% endif %}
    </div>
    <br>

    <div class="text-left" id="filtros">
      <h6 class="d-inline-block mr-3">Filtros de búsqueda</h6>
      <div class="d-inline-block">
        {{ form_start(form) }}
          <div class="row d-inline-block">
            <div class="col-md-12">{{ form_widget(form.empresas) }}</div>
          </div>
          <div class="row d-inline-block">
            <div class="col-md-12">{{ form_widget(form.nroFactura) }}</div>
          </div>
          <div class="row d-inline-block">
            <div class="col-md-12">{{ form_widget(form.niu) }}</div>
          </div>
          <div class="row d-inline-block">
            <div class="col-md-12">
              <button type="submit" class="btn btn-info btn-sm"><li class="fa fa-search"></li></button>
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>

    <br>
    {% if facturas is not empty %}
      <div class="table-responsive" style="height:1000px; font-size:13px;">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Nro. Factura</th>
                    <th>NIU</th>
                    <th>Usuario</th>
                    <th>Concepto</th>
                    <th>Vlr. Factura</th>
                    <th>Fecha Vencimiento</th>
                    <th>Observaciones</th>
                    <th>Mes/Año Facturado</th>
                    <th>Periodo Actual</th>
                    <th>¿Es Abono?</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for factura in facturas %}
                <tr>
                    <td>{{ factura.nroFactura }}</td>
                    <td>{{ factura.matricula }}</td>
                    <td class="text-left">{{ factura.nombreUsuario|title }}</td>
                    <td>{{ factura.concepto }}</td>
                    <td>${{ factura.valorFactura|number_format(0,",",".") }}</td>
                    <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('d/m/Y') }}{% endif %}</td>
                    <td>{% if factura.observaciones is not null and factura.observaciones != '' %}
                      {{ factura.observaciones }}
                      {% else %}
                        <span class="badge badge-warning text-white">NULL</span>
                    {% endif %}</td>
                    <td>{{ factura.mesFacturado~"/"~factura.anioFacturado }}</td>
                    <td>{% if factura.periodoActual == 0 %}
                        <span class="badge badge-warning text-white">NO</span>
                    {% elseif factura.periodoActual == 1 %}
                        <span class="badge badge-warning text-white">SI</span>
                    {% endif %}
                    </td>
                    <td>{% if factura.isAbono == 1 %}
                        <span class="badge badge-warning text-white">SI</span>
                      {% elseif factura.isAbono == 0%}
                        <span class="badge badge-warning text-white">NO</span>
                      {% endif %}
                    </td>
                    <td>
                        <ul class="">
                            <li>
                                <a title="Ver" href="{{ path('facturas_show', { 'idFactura': factura.idFactura }) }}">
                                  <span class="fa fa-eye cTomato"></span>
                                </a>
                            </li>
                            <li>
                                <a title="Editar" href="{{ path('facturas_edit', { 'idFactura': factura.idFactura }) }}">
                                  <span class="fa fa-edit cTomato"></span>
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(facturas) }}
        </div>
      </div>
    {% else %}
        <div class="alert alert-warning w-50 mx-auto">No hay registros que listar.</div>
    {% endif %}
  </div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
{% endblock %}
