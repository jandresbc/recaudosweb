{% extends 'base.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-white">
    <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
    <li class="breadcrumb-item">Maestros</li>
    <li class="breadcrumb-item"><a href="{{ path('facturas_index') }}">Facturación</a></li>
    <li class="breadcrumb-item active" aria-current="page">Ver Factura</li>
  </ol>
</nav>
<div class="container-fluid" style="height:700px;">
    <header class='text-center'>
        <h2>Factura Nro. {{ factura.nroFactura }}</h2>
    </header>

    <div class="row">
      <table class="table table-striped table-bordered w-50 mx-auto">
          <tbody>
              <tr>
                  <th>Nro. Factura</th>
                  <td>{{ factura.nroFactura }}</td>
              </tr>
              <tr>
                  <th>Matrícula (NIU)</th>
                  <td>{{ factura.matricula }}</td>
              </tr>
              <tr>
                  <th>Nombre Usuario</th>
                  <td>{{ factura.nombreUsuario }}</td>
              </tr>
              <tr>
                  <th>Concepto</th>
                  <td>{{ factura.concepto }}</td>
              </tr>
              <tr>
                  <th>Valor Factura</th>
                  <td>$ {{ factura.valorFactura|number_format(0,",",".") }}</td>
              </tr>
              <tr>
                  <th>Fecha Vencimiento</th>
                  <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
              </tr>
              <tr>
                  <th>Observaciones</th>
                  <td>{% if factura.observaciones != null %}{{ factura.observaciones }} {% else %} <span class="badge badge-warning text-white">NULL</span> {% endif %}</td>
              </tr>
              <tr>
                  <th>Mes / Año Facturado</th>
                  <td>{{ factura.mesFacturado~"/"~factura.anioFacturado }}</td>
              </tr>
              <tr>
                  <th>Meses Atrasados</th>
                  <td>{% if factura.mesesAtrasados != '' %}{{ factura.mesesAtrasados }} {% else %} <span class="badge badge-warning text-white">NULL</span> {% endif %}</td>
              </tr>
              <tr>
                  <th>Periodo Actual</th>
                  <td>{% if factura.periodoActual == 0 %}
                      <span class="badge badge-warning text-white">NO</span>
                  {% elseif factura.periodoActual == 1 %}
                      <span class="badge badge-warning text-white">SI</span>
                  {% endif %}</td>
              </tr>
              <tr>
                  <th>¿Es Abono?</th>
                  <td>{% if factura.isAbono == 1 %}
                      <span class="badge badge-warning text-white">SI</span>
                    {% elseif factura.isAbono == 0%}
                      <span class="badge badge-warning text-white">NO</span>
                    {% endif %}
                  </td>
              </tr>
          </tbody>
      </table>
    </div>
    <div class="row ml-3">
      <ul>
          <li>
              <a class="btn btn-info btn-sm" href="{{ path('facturas_index') }}">Volver a la lista</a>
          </li>
          <li>
              <a class="btn btn-info btn-sm" href="{{ path('facturas_new') }}">Crear Factura / Abonos</a>
          </li>
          <li>
              <a class="btn btn-primary btn-sm" href="{{ path('facturas_edit', { 'idFactura': factura.idFactura }) }}">Editar</a>
          </li>
          <li>
              {{ form_start(delete_form) }}
                  <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
              {{ form_end(delete_form) }}
          </li>
      </ul>
    </div>
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}

{% endblock %}
