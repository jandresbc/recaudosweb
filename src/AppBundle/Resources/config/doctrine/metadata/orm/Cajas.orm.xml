<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Cajas" table="cajas">
    <indexes>
      <index name="id_usuario" columns="id_usuario"/>
      <index name="id_empresa_sede_agencia" columns="id_empresa_sede_agencia"/>
    </indexes>
    <id name="idCaja" type="integer" column="id_caja">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nombreCaja" type="string" column="nombre_caja" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="sessionActiva" type="integer" column="session_activa" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">1 = Session Activa, 0= Session Inactiva</option>
        <option name="default">0</option>
      </options>
    </field>
    <field name="fechaHoraCreacion" type="datetime" column="fecha_hora_creacion" nullable="false"/>
    <field name="hasarchivado" type="integer" column="hasArchivado" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">1=Archivado, 0= No Archivado</option>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="idUsuario" target-entity="Usuarios" fetch="LAZY">
      <join-columns>
        <join-column name="id_usuario" referenced-column-name="id_usuario"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idEmpresaSedeAgencia" target-entity="EmpresasSedesAgencias" fetch="LAZY">
      <join-columns>
        <join-column name="id_empresa_sede_agencia" referenced-column-name="id_empresa_sede_agencia"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
