{% extends 'base.html.twig' %}

{% block body %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-white">
        <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
        <li class="breadcrumb-item">Maestros</li>
        <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
      </ol>
    </nav>

    <header class='text-center'>
      <h2>Lista de Usuarios.</h2>
      <span class="help-block"><li class="fa fa-info-circle text-info"></li> Lista de Usuarios registrados.</span>
    </header>

    {% if Error is defined and Error is not null %}
        <div id='Error' class="alert alert-danger alert-dismissible mt-3 w-50 mx-auto d-inline-block" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {{ Error }}
        </div>
    {% else %}
      {% if mensajes is defined and mensajes is not null or app.request.get('mensajes') is defined and app.request.get('mensajes') is not null%}
          <div id='mensaje' class="alert alert-warning alert-dismissible mt-3 w-50 mx-auto d-inline-block" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {% if mensajes is defined %}
              {{ mensajes }}
            {% elseif app.request.get('mensajes') is defined %}
              {{ app.request.get('mensajes') }}
            {% endif %}
          </div>
      {% endif %}
    {% endif %}

    <div class="container-fluid">
      <ul class="mb-2">
          {% if app.session.get('rol') == 'Superusuario' or app.session.get('rol') == 'Administrador' or app.session.get('rol') == 'Administrador Agencias' %}
          <li>
              <a class="btn btn-info btn-sm" href="{{ path('usuarios_new') }}">Crear Usuario</a>
          </li>
          {% endif %}
      </ul>

      <div class="text-left row mb-2" id="filtros">
        <div class="col-md-2"><h6 class="mr-3">Filtros de búsqueda</h6></div>
        <div class="col-md-8">
          {{ form_start(form) }}
            <div class="row d-inline-block">
              <div class="col-md-12">{{ form_widget(form.nombreUsuario) }}</div>
            </div>
            <div class="row d-inline-block">
              <div class="col-md-12">{{ form_widget(form.identificacion) }}</div>
            </div>
            <div class="row d-inline-block">
              <div class="col-md-12">
                <button type="submit" class="btn btn-info btn-sm"><li class="fa fa-search"></li></button>
              </div>
            </div>
          {{ form_end(form) }}
        </div>
        <div class="col-md-2 text-right">
            <span class="label label-warning">
                Total Entradas: <span class="cTomato">{{ usuarios.getTotalItemCount }}</span>
            </span>
        </div>
      </div>

      {% if usuarios is not empty %}
        <div class="table-responsive" style="height:650px; font-size:13px;">
          <table class="table table-striped table-sm mx-auto">
              <thead>
                  <tr>
                      <th>Nombre</th>
                      <th>Identificación</th>
                      <th>Teléfono</th>
                      <th>¿Usuario Activo?</th>
                      <th>Auth</th>
                      <th>Sede</th>
                      <th>Perfil</th>
                      <th>Acciones</th>
                  </tr>
              </thead>
              <tbody>
              {% for usuario in usuarios %}
                  <tr>
                      <td>{{ usuario.nombreCompleto }}</td>
                      <td>{{ usuario.identificacion }}</td>
                      <td>{{ usuario.telefono }}</td>
                      <td>
                        {% if usuario.activo == 0 %}
                            <span style="font-size:13px;" class="badge badge-danger text-white">NO</span>
                        {% elseif usuario.activo == 1 %}
                            <span style="font-size:13px;" class="badge badge-success text-white">SI</span>
                        {% endif %}
                      </td>
                      <td>
                        {% if usuario.auth == 0 %}
                            <span style="font-size:13px;" class="badge badge-danger text-white">NO</span>
                        {% elseif usuario.auth == 1 %}
                            <span style="font-size:13px;" class="badge badge-success text-white">SI</span>
                        {% endif %}
                      </td>
                      <td>{{ usuario.idSedeAgencia }}</td>
                      <td>{{ usuario.idGrupoUsuario }}</td>
                      <td>
                          <ul>
                              <li>
                                  <a title="Ver" href="{{ path('usuarios_show', { 'idUsuario': usuario.idUsuario }) }}">
                                    <span class="fa fa-eye cTomato"></span>
                                  </a>
                              </li>
                              <li>
                                  <a title="Editar" href="{{ path('usuarios_edit', { 'idUsuario': usuario.idUsuario }) }}">
                                    <span class="fa fa-edit cTomato"></span>
                                  </a>
                              </li>
                          </ul>
                      </td>
                  </tr>
              {% endfor %}
              </tbody>
          </table>
          {# display navigation #}
          <div class="navigation mx-auto">
              {{ knp_pagination_render(usuarios) }}
          </div>
        </div>
      {% else %}
        <div class="alert alert-warning w-50 mx-auto">No hay registros que listar.</div>
      {% endif %}

    </div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
{% endblock %}
