{% extends 'base.html.twig' %}

{% block body %}

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb bg-white">
        <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
        <li class="breadcrumb-item">Maestros</li>
        <li class="breadcrumb-item active" aria-current="page">Auditoría</li>
      </ol>
    </nav>

    <header class='text-center'>
        <h2>Auditoría del Sistema.</h2>
        <span class="help-block"><li class="fa fa-info-circle text-info"></li> Lista todos los registros de Auditoría del Sistema. Informa que acciones se han realizado en el sistema de recaudos.</span>
    </header>

    {% if mensajes is defined and mensajes is not null or app.request.get('mensajes') is defined and app.request.get('mensajes') is not null%}
        <div id='mensaje' class="alert alert-warning alert-dismissible mt-3 w-50 mx-auto d-inline-block" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          {% if mensajes is defined %}
            {{ mensajes }}
          {% elseif app.request.get('mensajes') is defined %}
            {{ app.request.get('mensajes') }}
          {% endif %}
        </div>
    {% endif %}

    {% if mensajesValidacion is defined and mensajesValidacion is not null %}
      {% if mensajesValidacion.mensaje == 'chain valid' %}
        <span class="fa fa-check-circle m-3" style="color:green; font-size:34px;"> {{mensajesValidacion.mensaje|capitalize}}</span>
      {% elseif mensajesValidacion.mensaje == 'chain not valid' %}
        <span class="fa fa-times-circle m-3" style="color:red; font-size:34px;"> {{mensajesValidacion.mensaje|capitalize}}</span>
      {% endif %}
    {% endif %}

    <div class="container-fluid">
      <form name="validarCadena" action="{{ path('validateChain') }}" method="POST">
        <div class="mb-2 row">
            <div class="col-md-2 text-left">
              <h6 class="mt-3">Rangos de Validación</h6>
            </div>
            <div class="col-md-2">
              <span>Rango Mínimo: </span>
              <span id="outputRangeMin"></span>
              <input type="range" min="1" max="{{ rows }}" step="1" value="1" width="250" class="slider" id="RangeMin" name="RangeMin">
            </div>
            <div class="col-md-2">
              <span>Rango Máximo: </span>
              <span id="outputRangeMax"></span>
              <input type="range" min="1" max="{{ rows }}" step="1" value="1000" width="250" class="slider" id="RangeMax" name="RangeMax">
            </div>
            <div class="col-md-6 text-left">
              <input type="submit" class="btn btn-info btn-sm mt-2" value="Validar Cadena de Registros">
            </div>
        </div>
      </form>
      <script>
        var sliderMin = document.getElementById("RangeMin");
        var outputMin = document.getElementById("outputRangeMin");
        outputMin.innerHTML = sliderMin.value; // Display the default slider value

        // Update the current slider value (each time you drag the slider handle)
        sliderMin.oninput = function() {
          outputMin.innerHTML = this.value;
        }


        var sliderMax = document.getElementById("RangeMax");
        var outputMax = document.getElementById("outputRangeMax");
        outputMax.innerHTML = sliderMax.value; // Display the default slider value

        // Update the current slider value (each time you drag the slider handle)
        sliderMax.oninput = function() {
          outputMax.innerHTML = this.value;
        }
      </script>


      <div class="text-left row mb-2" id="filtros">
        <div class="col-md-2 pt-2"><h6 class="mr-3">Filtros de búsqueda</h6></div>
        <div class="col-md-8">
          {{ form_start(form) }}
            <div class="row d-inline-block">
              <div class="col-md-12">{{ form_widget(form.accion) }}</div>
            </div>

            <div class="row d-inline-block">
              <div class="col-md-12">{{ form_widget(form.usuario) }}</div>
            </div>

            <div class="row d-inline-block">
              <div class="col-md-12">
                <button id="buscar" type="submit" class="btn btn-info btn-sm"><li class="fa fa-search"></li></button>
                <input type="hidden" id="exportType" name="exportType" value="">
                <button id="btnCSV" type="submit" class='btn btn-sm btn-success'>
                  <li class="fa fa-file-excel"> Exportar .CSV</li>
                </button>
              </div>
            </div>
          {{ form_end(form) }}
        </div>
        <div class="col-md-2 text-right">
            <span class="label label-warning">
                Total Entradas: <span class="cTomato">{{ auditorias.getTotalItemCount }}</span>
            </span>
        </div>
      </div>
      {% if auditorias is not empty %}
        <div class="table-responsive" style="height:900px; font-size:13px;">
          <table class="table table-striped table-bordered table-sm mx-auto">
              <thead>
                  <tr>
                      <!--<th>Txhash</th>
                      <th>Bxfrom</th>
                      <th>Bxto</th>-->
                      <th>Fecha/hora</th>
                      <th>Acción</th>
                      <th>Tabla</th>
                      <th>ID Datos</th>
                      <th>Datos</th>
                      <th>Usuario</th>
                      {% if app.session.get('rol') == 'Superusuario' %}
                      <th>Empresa</th>
                      {% endif %}
                      <th>Acciones</th>
                  </tr>
              </thead>
              <tbody>
              {% for auditorium in auditorias %}
                  <tr>
                      <!--<td>{{ auditorium.txhash }}</td>
                      <td>{{ auditorium.bxfrom }}</td>
                      <td>{{ auditorium.bxto }}</td>-->
                      <td>{% if auditorium.fechaHora %}{{ auditorium.fechaHora|date('Y-m-d h:i:s A') }}{% endif %}</td>
                      <td>{{ auditorium.accion }}</td>
                      <td>{{ auditorium.tabla }}</td>
                      <td>{{ auditorium.idDatos }}</td>
                      <td>{{ auditorium.datos | replace({'~': ' | '}) }}</td>
                      <td>{{ auditorium.idUsuario }}</td>
                      {% if app.session.get('rol') == 'Superusuario' %}
                      <td>{{ auditorium.idEmpresa }}</td>
                      {% endif %}
                      <td>
                          <ul>
                              <li>
                                  <a title="Ver" href="{{ path('auditoria_show', { 'idAuditoria': auditorium.idAuditoria }) }}">
                                    <span class="fa fa-eye cTomato"></span>
                                  </a>
                              </li>
                          </ul>
                      </td>
                  </tr>
              {% endfor %}
              </tbody>
          </table>
          {# display navigation #}
          <div class="navigation mx-auto">
              {{ knp_pagination_render(auditorias) }}
          </div>
        </div>
      {% else %}
        <div class="alert alert-warning w-50 mx-auto">No hay registros que listar.</div>
      {% endif %}
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    $(document).ready(function(){
      $("#btnCSV").click(function(e){
        $("#exportType").val("csv");
      });

      $("#buscar").click(function(e){
        $("#exportType").val("buscar");
      });
    });
{% endblock %}
