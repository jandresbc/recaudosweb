        <!-- jAlert 4.0 Jquery -->
        <link rel="stylesheet" href="{{ asset('bundles/app/js/jAlert/dist/jAlert.css') }}" />
        <script src="{{ asset('bundles/app/js/jAlert/dist/jAlert.min.js') }}"></script>
        <script src="{{ asset('bundles/app/js/jAlert/dist/jAlert-functions.min.js') }}"> //optional!!</script>

