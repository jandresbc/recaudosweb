{% extends 'base.html.twig' %}

{% block body %}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-white">
    <li class="breadcrumb-item"><a href="{{path('dashboard')}}">Dashboard</a></li>
    <li class="breadcrumb-item active" aria-current="page">Cambiar Contraseña</li>
  </ol>
</nav>
  <div class="container-fluid">
      <div class="row justify-content-center">
          <div class="col-md-12 text-center">
              <header class='text-center'>
                  <h2>Cambia tu Contraseña.</h2>
                  <span class="help-block"><li class="fa fa-info-circle text-info"></li> Realiza el cambio de tu contraseña de acceso al sistema de Recaudos Web.</span>
              </header>
              {% if mensajes is defined and mensajes is not null %}
                  <div id='mensaje' class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ mensajes }}
                  </div>
              {% endif %}
              <div class="col-md-12">
                {{ form_start(form) }}
                  <div class="form-group row">
                    <div class="inline-block col-md-5 text-right">{{ form_label(form.contrasena['first']) }}</div>
                    <div class="inline-block col-md-7">{{ form_widget(form.contrasena['first']) }}</div>
                    <div class="w-100 text-center"><span class="text-danger">{{ form_errors(form.contrasena['first']) }}</span></div>
                  </div>
                  <div class="form-group row">
                    <div class="inline-block col-md-5 text-right">{{ form_label(form.contrasena['second']) }}</div>
                    <div class="inline-block col-md-7">{{ form_widget(form.contrasena['second']) }}</div>
                    <div class="w-100 text-center"><span class="text-danger">{{ form_errors(form.contrasena['second']) }}</span></div>
                  </div>
                  <br>
                  <div class="text-center">
                    <input type="submit" class='btn btn-primary' value="Cambiar" />
                  </div>
                {{ form_end(form) }}
              </div>
          </div>
      </div>
  </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  $(document).ready(function(){

  });
{% endblock %}
