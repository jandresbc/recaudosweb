<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Transacciones" table="transacciones">
    <indexes>
      <index name="id_usuario" columns="id_usuario"/>
      <index name="id_empresa_sede_agencia" columns="id_empresa_sede_agencia"/>
      <index name="id_caja" columns="id_caja"/>
    </indexes>
    <id name="idTransaccion" type="integer" column="id_transaccion">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nroTransaccion" type="string" column="nro_transaccion" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="codigoSeguridad" type="string" column="codigo_seguridad" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="fechaHoraTransaccion" type="datetime" column="fecha_hora_transaccion" nullable="true"/>
    <field name="totalTransaccion" type="float" column="total_transaccion" precision="10" scale="0" nullable="true"/>
    <field name="isClosed" type="integer" column="is_closed" nullable="true">
      <options>
        <option name="unsigned"/>
        <option name="comment">0 = Sin cerrar caja, 1= Cerrada Caja</option>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="idUsuario" target-entity="Usuarios" fetch="LAZY">
      <join-columns>
        <join-column name="id_usuario" referenced-column-name="id_usuario"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idEmpresaSedeAgencia" target-entity="EmpresasSedesAgencias" fetch="LAZY">
      <join-columns>
        <join-column name="id_empresa_sede_agencia" referenced-column-name="id_empresa_sede_agencia"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="idCaja" target-entity="Cajas" fetch="LAZY">
      <join-columns>
        <join-column name="id_caja" referenced-column-name="id_caja"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
