        <script src="{{ asset('bundles/app/js/bower_components/bootstrap/dist/js/bootstrap.min.js') }}" type="application/javascript"></script>

        <!-- FontAwesome 5.0.8 --->
        <link href="{{ asset('bundles/app/js/bower_components/fontawesome/web-fonts-with-css/css/fontawesome-all.min.css') }}" rel="stylesheet"/>

        <!-- dataTables -->
        <link href="{{ asset('bundles/app/js/bower_components/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet"/>
